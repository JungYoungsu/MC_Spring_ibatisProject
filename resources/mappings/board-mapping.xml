<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
	"http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap>
	<insert id="insertBoard" parameterClass="com.multicampus.biz.board.BoardVO">
		insert into board(seq, title, writer, content)
		values((select nvl(max(seq), 0)+1 from board),
		#title#,
		#writer#,
		#content#)
	</insert>

	<update id="updateBoard" parameterClass="com.multicampus.biz.board.BoardVO">
		update board
		set title=#title#, content=#content# where seq=#seq#
	</update>

	<delete id="deleteBoard" parameterClass="com.multicampus.biz.board.BoardVO">
		delete board where seq=#seq#
	</delete>

	<select id="getBoard" parameterClass="com.multicampus.biz.board.BoardVO"
							resultClass="com.multicampus.biz.board.BoardVO">
		select * from board where seq=#seq#
	</select>

	<select id="getBoardList" resultClass="com.multicampus.biz.board.BoardVO">
		select * from board
		order by seq desc
	</select>
	
	<select id="getBoardCount" resultClass="int">
		select count(*) from board
	</select>
</sqlMap>
